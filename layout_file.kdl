layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }
    tab name="hugo server" {
        pane {
            command "mask"
            args "server"
            cwd "."
        }
    }
    tab name="term" focus=true {
        pane command="nu"
    }
}
